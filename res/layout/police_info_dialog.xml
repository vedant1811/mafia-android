<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You will get your answer at the end of the round. The color of the button will indicate the reply as:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/polieInfoButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="Button"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/polieInfoButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="Button"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/polieInfoButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="Button"
        android:textColor="@android:color/black" />

</LinearLayout>
